{% extends 'base.html.twig' %}

{% block body %}
<div class="container">

    <h1> Modification d'un ingrédient </h1>

    {{ form_start(form) }}

    <div class="form-group">
        {{ form_label(form.name) }}
        {{ form_widget(form.name) }}
        <div class="form-error">
            {{ form_errors(form.name) }}
        </div>
    </div>

    <div class="form-group">
        {{ form_label(form.price) }}
        {{ form_widget(form.price) }}
        <div class="form-error">
            {{ form_errors(form.price) }}
        </div>
    </div>

    <div class="form-group">
        {{ form_row(form._token) }}
    </div>

    <div class="form-group"><button type="submit" id="ingredient_submit" name="ingredient[submit]" class="btn btn-primary mt-4">Modifier mon ingrédient</button>
    </div>

   
<a href="{{ path('ingredient.index') }}" class="btn btn-primary mt-3">
Tableau des ingredients
</a>
</div>


{% endblock %}